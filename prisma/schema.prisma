// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  cep           String
  address       String
  number        String
  password_hash String
  created_at    DateTime @default(now())

  pets Pet[]

  @@map("orgs")
}

model Pet {
  id           String  @id @default(uuid())
  name         String
  about        String?
  age          String
  size         String
  independence String

  photos      Photos[]
  requirement Requirement[]

  Org    Org?    @relation(fields: [org_id], references: [id])
  org_id String?

  @@map("pets")
}

model Photos {
  id     String @id @default(uuid())
  height Int
  width  Int
  url    String

  Pet    Pet?    @relation(fields: [pet_id], references: [id])
  pet_id String?

  @@map("photos")
}

model Requirement {
  id          String @id @default(uuid())
  requirement String

  Pet    Pet?    @relation(fields: [pet_id], references: [id])
  pet_id String?

  @@map("requirements")
}
